<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Reason_is_required_for_Assign</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Update_Type__c, &apos;Assign&apos;) , ISBLANK(AssignReason__c) )</errorConditionFormula>
    <errorMessage>You must enter Assign Reason when Assign is selected as Update Type</errorMessage>
</ValidationRule>
