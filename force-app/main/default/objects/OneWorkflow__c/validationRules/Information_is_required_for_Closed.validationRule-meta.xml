<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Information_is_required_for_Closed</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Update_Type__c, &apos;Closed&apos;) , ISBLANK(Resolution__c) )</errorConditionFormula>
    <errorMessage>You must enter Resolution and Resolution Code when Closed is selected as Update Type</errorMessage>
</ValidationRule>
