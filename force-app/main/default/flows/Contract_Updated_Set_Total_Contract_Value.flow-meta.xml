<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <description>When Monthly Contract Value is changed, the flow runs to update the Total Contract Value based on the new Monthly Contract Value.</description>
    <environments>Default</environments>
    <formulas>
        <name>TotalContractValueFormula</name>
        <dataType>Currency</dataType>
        <expression>{!$Record.Monthly_Contract_Value__c} * {!$Record.ContractTerm}</expression>
        <scale>2</scale>
    </formulas>
    <interviewLabel>Contract Updated: Set Total Contract Value {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Contract Updated: Set Total Contract Value</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Total_Contract_Value</name>
        <label>Update Total Contract Value</label>
        <locationX>176</locationX>
        <locationY>287</locationY>
        <inputAssignments>
            <field>Total_Contract_value__c</field>
            <value>
                <elementReference>TotalContractValueFormula</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_Total_Contract_Value</targetReference>
        </connector>
        <filterLogic>or</filterLogic>
        <filters>
            <field>Monthly_Contract_Value__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>ContractTerm</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>Contract</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
