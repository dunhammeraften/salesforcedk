<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <decisions>
        <name>Was_Recordtype_change_from_CustomerServiceCase_to_OrderFulfilmentCase</name>
        <label>Was Recordtype change from CustomerServiceCase to OrderFulfilmentCase ?</label>
        <locationX>182</locationX>
        <locationY>287</locationY>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>Yes_Case_is_now_OrderFulfilmentCase</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record__Prior.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Customer_Service_Case</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Order_Fulfilment_Case</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Remove_Escalation_flag</targetReference>
            </connector>
            <label>Yes, Case is now OrderFulfilmentCase</label>
        </rules>
    </decisions>
    <description>If recordtype is changed Case need to be updated</description>
    <environments>Default</environments>
    <interviewLabel>Case Update when recordtype is changed {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Case Update when recordtype is changed</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
