        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>216</locationX>
        <locationY>38</locationY>
        <connector>
            <targetReference>GetQuoteLine</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Quote_line__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>Activation_line__c</object>
