        <expression>{!Get_Portal_user.Email}</expression>
    </formulas>
    <formulas>
        <name>varRemindersSent</name>
        <dataType>Number</dataType>
        <expression>{!varNoOfReminders} + 1</expression>
        <scale>0</scale>
    </formulas>
