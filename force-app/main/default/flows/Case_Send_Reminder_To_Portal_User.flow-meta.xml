    </formulas>
    <formulas>
        <name>varNoOfPeriodsSinceCreated</name>
        <dataType>Number</dataType>
        <expression>(Today()-DATEVALUE({!Get_Portal_user.CreatedDate}))/{!varReminderFrequency}</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>varNoOfPeriodsSinceCreatedTrunc</name>
        <dataType>Number</dataType>
        <expression>TRUNC((Today()-DATEVALUE({!Get_Portal_user.CreatedDate}))/{!varReminderFrequency}, 0)</expression>
        <scale>0</scale>
    </formulas>
    <formulas>
        <name>varPortalUserEmail</name>
