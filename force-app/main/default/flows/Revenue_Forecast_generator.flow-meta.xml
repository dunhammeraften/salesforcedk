<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <decisions>
        <description>Checks if there are previously generated Forecast Items/Revenue Forecasts for this quote</description>
        <name>Previous_Forecast_Items_found</name>
        <label>Previous Forecast Items found</label>
        <locationX>379</locationX>
        <locationY>368</locationY>
        <defaultConnector>
            <targetReference>Create_Revenue_Forecast_Records</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No, just create</defaultConnectorLabel>
        <rules>
            <name>Yes_Delete</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>getForecastItem</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Delete_Forecast_Items</targetReference>
            </connector>
            <label>Yes, Delete</label>
        </rules>
    </decisions>
    <description>This flow deletes old revenue forecasts/forecast items and generates new ones for any particular Quote ID that is passed to it.</description>
    <formulas>
        <name>CrossSellMonthly</name>
        <dataType>Currency</dataType>
        <expression>{!getQuote.Cross_and_upsale_amount__c}/{!getQuote.SBQQ__SubscriptionTerm__c}</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>MonthTracker</name>
        <dataType>Date</dataType>
        <expression>IF(
ISBLANK({!getQuote.SBQQ__StartDate__c}),
DATE(
YEAR(ADDMONTHS({!getQuote.SBQQ__Opportunity2__r.CloseDate},{!varNumberCounter})),
MONTH(ADDMONTHS({!getQuote.SBQQ__Opportunity2__r.CloseDate},{!varNumberCounter})),1),
DATE(
YEAR(ADDMONTHS({!getQuote.SBQQ__StartDate__c},{!varNumberCounter})),
MONTH(ADDMONTHS({!getQuote.SBQQ__StartDate__c},{!varNumberCounter})),1))</expression>
    </formulas>
    <formulas>
        <name>StartDateFormula</name>
        <dataType>Date</dataType>
        <expression>IF(ISBLANK({!getQuote.SBQQ__StartDate__c}),{!getQuote.SBQQ__Opportunity2__r.CloseDate},{!getQuote.SBQQ__StartDate__c})</expression>
    </formulas>
    <interviewLabel>Revenue Forecast generator {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Revenue Forecast generator</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>FREE_FORM_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordDeletes>
        <description>Deletes the Revenue Forecast Items that were found previously.</description>
        <name>Delete_Forecast_Items</name>
        <label>Delete Forecast Items</label>
        <locationX>388</locationX>
        <locationY>618</locationY>
        <connector>
            <targetReference>Create_Revenue_Forecast_Records</targetReference>
        </connector>
        <inputReference>getForecastItem</inputReference>
    </recordDeletes>
    <recordLookups>
        <description>This searches for all the previous Forecast Items on this quote in order to send them for deletion.</description>
        <name>getForecastItem</name>
        <label>getForecastItem</label>
        <locationX>386</locationX>
        <locationY>196</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Previous_Forecast_Items_found</targetReference>
        </connector>
        <filterLogic>or</filterLogic>
        <filters>
            <field>Quote__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>varQuoteId</elementReference>
            </value>
        </filters>
        <filters>
            <field>Opportunity__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>getQuote.SBQQ__Opportunity2__c</elementReference>
            </value>
        </filters>
        <getFirstRecordOnly>false</getFirstRecordOnly>
        <object>Revenue_Forecast__c</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <recordLookups>
        <description>This gets all of the data from the Quote that has been specified in varQuoteId.</description>
        <name>getQuote</name>
        <label>getQuote</label>
        <locationX>176</locationX>
        <locationY>197</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>getForecastItem</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>varQuoteId</elementReference>
            </value>
        </filters>
        <getFirstRecordOnly>true</getFirstRecordOnly>
        <object>SBQQ__Quote__c</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <start>
        <locationX>50</locationX>
        <locationY>50</locationY>
        <connector>
            <targetReference>getQuote</targetReference>
        </connector>
    </start>
    <status>Active</status>
    <subflows>
        <name>Create_Revenue_Forecast_Records</name>
        <label>Create Revenue Forecast Records</label>
        <locationX>131</locationX>
        <locationY>494</locationY>
        <flowName>Revenue_Forecast_generator_subflow</flowName>
        <inputAssignments>
            <name>inpCrossUpsaleAmount</name>
            <value>
                <elementReference>CrossSellMonthly</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>inpForecastedAmunt</name>
            <value>
                <elementReference>getQuote.Monthly_Subscription_Fee__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>inpOneTimeCharges</name>
            <value>
                <elementReference>getQuote.One_time_fee__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>inpOpportunityId</name>
            <value>
                <elementReference>getQuote.SBQQ__Opportunity2__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>inpOwnerId</name>
            <value>
                <stringValue>0051i000001pe0UAAQ</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>inpQuoteId</name>
            <value>
                <elementReference>getQuote.Id</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>inpStartDate</name>
            <value>
                <elementReference>StartDateFormula</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>inpSubscriptionTerm</name>
            <value>
                <elementReference>getQuote.SBQQ__SubscriptionTerm__c</elementReference>
            </value>
        </inputAssignments>
    </subflows>
    <variables>
        <name>varForecastItemsToCreate</name>
        <dataType>SObject</dataType>
        <isCollection>true</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
        <objectType>Revenue_Forecast__c</objectType>
    </variables>
    <variables>
        <name>varNumberCounter</name>
        <dataType>Number</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
        <scale>0</scale>
    </variables>
    <variables>
        <name>varQuoteId</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>false</isOutput>
    </variables>
    <variables>
        <name>varRevenueForecastToCreate</name>
        <dataType>SObject</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
        <objectType>Revenue_Forecast__c</objectType>
    </variables>
</Flow>
