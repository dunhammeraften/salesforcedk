    <description>Sets the default &quot;Renewal Opportunity Creation Date&quot; and the &quot;Renewal Quote Creation Date&quot; on the Contract creation. It also sets the Contract Status. This Flow has incorporated PB &quot;Set Contract Status&quot;.</description>
    <environments>Default</environments>
    <formulas>
        <name>ContractOwner</name>
        <dataType>String</dataType>
        <expression>IF ( ISBLANK({!$Record.SBQQ__Opportunity__c}), {!$Record.Account.OwnerId} , {!$Record.SBQQ__Opportunity__r.Original_Primary_Quote__r.OwnerId})</expression>
    </formulas>
    <formulas>
        <name>DefaultOpportunityCreationDate</name>
        <dataType>Date</dataType>
        <expression>IF(MONTH ( {!$Record.EndDate}) = 01, (DATE(YEAR({!$Record.EndDate})-1, 12, 01)), (DATE(YEAR({!$Record.EndDate})-1, MONTH ( {!$Record.EndDate})-1, 01)))</expression>
    </formulas>
    <formulas>
        <name>DefaultQuoteCreationDate</name>
        <dataType>Date</dataType>
        <expression>CASE(MONTH ( {!$Record.EndDate}),
1, (DATE(YEAR({!$Record.EndDate})-1, 09, 02)),
2, (DATE(YEAR({!$Record.EndDate})-1, 10, 02)),
3, (DATE(YEAR({!$Record.EndDate})-1, 11, 02)),
4, (DATE(YEAR({!$Record.EndDate})-1, 12, 02)),
5, (DATE(YEAR({!$Record.EndDate}), 01, 02)),
6, (DATE(YEAR({!$Record.EndDate}), 02, 02)),
7, (DATE(YEAR({!$Record.EndDate}), 03, 02)),
8, (DATE(YEAR({!$Record.EndDate}), 04, 02)),
9, (DATE(YEAR({!$Record.EndDate}), 05, 02)),
10, (DATE(YEAR({!$Record.EndDate}),06, 02)),
11, (DATE(YEAR({!$Record.EndDate}),07, 02)),
12, (DATE(YEAR({!$Record.EndDate}), 08, 02)),
(DATE(YEAR({!$Record.EndDate}), 01, 02)))</expression>
    </formulas>
