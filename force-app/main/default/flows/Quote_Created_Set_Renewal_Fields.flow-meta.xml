<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <decisions>
        <name>is_Opportunity_a_Renewal</name>
        <label>is Opportunity a Renewal?</label>
        <locationX>374</locationX>
        <locationY>276</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Yes</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.SBQQ__Opportunity2__r.Name</leftValueReference>
                <operator>StartsWith</operator>
                <rightValue>
                    <stringValue>Renewal</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Renewal_Quote_Fields</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <description>For Renewal Quotes required fields are set</description>
    <environments>Default</environments>
    <formulas>
        <name>CalculateCheckbox</name>
        <dataType>Boolean</dataType>
        <expression>AND(OR({!$Record.SBQQ__Account__r.NumberOfEmployees} &lt; 50, ISBLANK({!$Record.SBQQ__Account__r.NumberOfEmployees})),{!OppSubscriptionTerm} &gt; 24)</expression>
    </formulas>
    <formulas>
        <name>OppBillingFreq</name>
        <dataType>String</dataType>
        <expression>TEXT({!$Record.SBQQ__Opportunity2__r.Billing_Frequency__c})</expression>
    </formulas>
    <formulas>
        <name>OppPaymentTerms</name>
        <dataType>String</dataType>
        <expression>TEXT({!$Record.SBQQ__Opportunity2__r.Payment_Terms__c})</expression>
    </formulas>
    <formulas>
        <name>OppSpecialTerm</name>
        <dataType>String</dataType>
        <expression>{!$Record.SBQQ__Opportunity2__r.Special_Term__c}</expression>
    </formulas>
    <formulas>
        <name>OppSubscriptionTerm</name>
        <dataType>Number</dataType>
        <expression>{!$Record.SBQQ__Opportunity2__r.Subscription_Term__c}</expression>
        <scale>2</scale>
    </formulas>
    <interviewLabel>Quote: {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Quote Created - Set Renewal Fields</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Renewal_Quote_Fields</name>
        <label>Update Renewal Quote Fields</label>
        <locationX>242</locationX>
        <locationY>384</locationY>
        <inputAssignments>
            <field>SBQQ__BillingFrequency__c</field>
            <value>
                <elementReference>OppBillingFreq</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>SBQQ__PaperSize__c</field>
            <value>
                <stringValue>A4</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>SBQQ__PaymentTerms__c</field>
            <value>
                <elementReference>OppPaymentTerms</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>SBQQ__SubscriptionTerm__c</field>
            <value>
                <elementReference>OppSubscriptionTerm</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Special_Term__c</field>
            <value>
                <elementReference>OppSpecialTerm</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>X24_Month_Rule__c</field>
            <value>
                <elementReference>CalculateCheckbox</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>SBQQ__Type__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Renewal</stringValue>
            </value>
        </filters>
        <filters>
            <field>Quote_Type__c</field>
            <operator>NotEqualTo</operator>
            <value>
                <stringValue>Activation Quote</stringValue>
            </value>
        </filters>
        <object>SBQQ__Quote__c</object>
        <recordTriggerType>Create</recordTriggerType>
        <scheduledPaths>
            <name>Wait_1_minute</name>
            <connector>
                <targetReference>is_Opportunity_a_Renewal</targetReference>
            </connector>
            <label>Wait 1 minute</label>
            <offsetNumber>1</offsetNumber>
            <offsetUnit>Minutes</offsetUnit>
            <timeSource>RecordTriggerEvent</timeSource>
        </scheduledPaths>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
    <triggerOrder>800</triggerOrder>
</Flow>
